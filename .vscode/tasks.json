{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build debug",
			"type": "shell",
			"command": "haxe",
			"args": [
				"build.hxml",
				"-debug"
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
            ],
            "group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
            }
		},
		{
			"label": "build release",
			"type": "shell",
			"command": "haxe",
			"args": [
				"build.hxml",
			],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": "none",
			"presentation": {
				"clear": true
			}
		}
	]
}